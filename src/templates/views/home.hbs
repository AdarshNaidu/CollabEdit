            <input type="text" class="form-control" id="input" placeholder="Start a Collab">
            <div class="input-group-append">
                <button class="btn btn-dark" type="button" onclick="Collab(event)" id="button">Start Collab</button>
            </div>
            </div>
        </div>
    </div>
